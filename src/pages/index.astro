    <!-- Testimonials Section -->
    <section class="section bg-light">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold mb-4">What they say</h2>
