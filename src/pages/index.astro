    <!-- 2025 Key Dates Section -->
    <section class="section">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold mb-4">2025 Key Dates</h2>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold">13</span>
            </div>
            <h4 class="text-lg font-semibold mb-2">13 May 2025</h4>
            <p class="text-secondary">Nominations Open</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold">15</span>
            </div>
            <h4 class="text-lg font-semibold mb-2">15 July 2025</h4>
            <p class="text-secondary">Nomination Briefing</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold">09</span>
            </div>
            <h4 class="text-lg font-semibold mb-2">09 Sept 2025</h4>
            <p class="text-secondary">Nominations Close</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold">23</span>
            </div>
            <h4 class="text-lg font-semibold mb-2">23 Sept 2025</h4>
            <p class="text-secondary">Finalists Announced</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold">25</span>
            </div>
