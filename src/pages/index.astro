---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Welcome to Your Site"
  description="This is a template description. Replace this with your actual site description for better SEO."
>
  <script type="application/ld+json" slot="head">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "@id": "https://yoursite.com/#organization",
  "name": "Your Company Name",
  "alternateName": "Your Brand",
  "url": "https://yoursite.com",
  "logo": {
    "@type": "ImageObject",
    "url": "https://yoursite.com/og-image.jpg",
    "width": "1200",
    "height": "630"
  },
  "description": "Your company description goes here.",
  "knowsAbout": [
    "Industry 1",
    "Industry 2",
    "Service 1",
    "Service 2"
  ]
}
  </script>

  <Header />

  <main class="pt-16 min-h-screen">
    <!-- Hero Section -->
    <section class="py-20 px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 bg-clip-text text-transparent">
          Welcome to Your Template
        </h1>
        <p class="text-xl md:text-2xl text-zinc-300 mb-8">
          A modern, fast, and SEO-optimized Astro template
        </p>
        <p class="text-lg text-zinc-400 max-w-2xl mx-auto mb-8">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-zinc-900 bg-white hover:bg-zinc-100 transition-colors"
          >
            Get Started
          </a>
          <a
            href="/about"
            class="inline-flex items-center justify-center px-8 py-3 border border-zinc-700 text-base font-medium rounded-md text-white hover:bg-zinc-800 transition-colors"
          >
            Learn More
          </a>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 px-4 bg-zinc-900">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Key Features
          </h2>
          <p class="text-lg text-zinc-400 max-w-2xl mx-auto">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Feature 1 -->
          <div class="p-6 bg-zinc-800 rounded-lg border border-zinc-700">
            <div class="w-12 h-12 bg-blue-500/10 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">Fast Performance</h3>
            <p class="text-zinc-400">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Optimized for speed.
            </p>
          </div>

          <!-- Feature 2 -->
          <div class="p-6 bg-zinc-800 rounded-lg border border-zinc-700">
            <div class="w-12 h-12 bg-purple-500/10 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">SEO Optimized</h3>
            <p class="text-zinc-400">
              Built-in SEO features including meta tags, structured data, and sitemaps.
            </p>
          </div>

          <!-- Feature 3 -->
          <div class="p-6 bg-zinc-800 rounded-lg border border-zinc-700">
            <div class="w-12 h-12 bg-pink-500/10 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">Fully Customizable</h3>
            <p class="text-zinc-400">
              Easy to customize with Tailwind CSS and modern component architecture.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Ready to Get Started?
        </h2>
        <p class="text-lg text-zinc-400 mb-8">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Start your journey today.
        </p>
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-zinc-900 bg-white hover:bg-zinc-100 transition-colors"
        >
          Contact Us
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
