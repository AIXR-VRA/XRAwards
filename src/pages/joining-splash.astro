---
/**
 * How are you joining the XR Awards?
 * Page showing attending options and newsletter signup
 */
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CTAFooter from '../components/CTAFooter.astro';
import Button from '../components/Button.astro';
import { supabase } from '../utils/supabase';

// Fetch active event details
const { data: eventDetails } = await supabase
  .from('event_details')
  .select('*')
  .eq('is_active', true)
  .single();
---

<Layout
  title="How are you joining the XR Awards? - AIXR XR Awards"
  description={`Join us in person on the red carpet in ${eventDetails?.location || 'SS Rotterdam'} for our black tie event on ${eventDetails?.awards_ceremony ? new Date(eventDetails.awards_ceremony).toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' }) : '9 December 2025'}, or watch the ceremony livestream directly from YouTube.`}
>
  <Header />
  
  <main class="min-h-screen bg-[#0E1022]">
    <!-- Attending Options Section -->
    <section class="pt-32 md:pt-40 pb-16 md:pb-24 bg-[#0E1022]">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Two Column Layout for Attending Options -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
          
          <!-- Attending in Person Card -->
          <div class="bg-white rounded-lg p-8 text-center flex flex-col">
            <!-- Icon -->
            <div class="mb-6 flex justify-center">
              <svg class="w-20 h-20 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
              </svg>
            </div>
            
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">
              Attending in Person
            </h2>
            
            <p class="text-base text-gray-700 mb-4 leading-relaxed">
              Join us <strong class="font-semibold">in person on the red carpet</strong> in {eventDetails?.location || 'SS Rotterdam'} for our <strong class="font-semibold">black tie event</strong> on {eventDetails?.awards_ceremony ? new Date(eventDetails.awards_ceremony).toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' }) : '9 December 2025'}.
            </p>
            
            <p class="text-sm text-gray-600 mb-6">
              *Must have a valid XR Awards Gala Ticket
            </p>
            
             <div class="mt-auto">
              <Button
                href="/travel-accommodation"
                variant="orange"
                size="lg"
              >
                View Attendee Guide
              </Button>
            </div>
          </div>

          <!-- Watching Online Card -->
          <div class="bg-gray-900 rounded-lg p-8 text-center flex flex-col border-2 border-gray-800">
            <!-- Icon -->
            <div class="mb-6 flex justify-center">
              <svg class="w-20 h-20 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
            </div>
            
            <h2 class="text-2xl md:text-3xl font-bold text-white mb-6">
              Watching Online
            </h2>
            
            <p class="text-base text-white mb-4 leading-relaxed">
              Watch only the <strong class="font-semibold">ceremony livestream</strong> directly from Youtube.
            </p>
            
            <p class="text-sm text-white/80 mb-6">
              *Free & Online Only
            </p>
            
             <div class="mt-auto">
              <Button
                href="/watch-live/"
                variant="secondary"
                size="lg"
              >
                Watch Live
              </Button>
            </div>
          </div>
        </div>

      </div>
    </section>

    <!-- CTA Section -->
    <CTAFooter />
  </main>

  <Footer />
</Layout>

<style>
  /* Add any custom styles if needed */
</style>

