---
export const prerender = true;

import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout
  title="Legal Information & Policies - XR Awards 2025"
  description="Legal information and policies for the XR Awards."
>
  <Header />
  
  <main class="min-h-screen bg-white">
    <!-- Legal Header -->
    <section class="relative bg-[#0E1022] pt-32 md:pt-40 pb-20 md:pb-32 overflow-hidden">
      <!-- Decorative Background Rings -->
      <!-- Left Ring -->
      <div class="absolute -left-20 md:left-0 top-1/4 -translate-y-1/2 -translate-x-1/2 w-[300px] h-[300px] md:w-[450px] md:h-[450px]">
        <div class="absolute inset-0 rounded-full" style="background: linear-gradient(180deg, #E91E8C 0%, #5D1635 100%);"></div>
        <div class="absolute top-[55px] left-[55px] right-[55px] bottom-[55px] md:top-[75px] md:left-[75px] md:right-[75px] md:bottom-[75px] rounded-full bg-[#0E1022]"></div>
      </div>
      <!-- Right Ring -->
      <div class="absolute -right-20 md:right-0 top-3/4 -translate-y-1/2 translate-x-1/2 w-[300px] h-[300px] md:w-[450px] md:h-[450px]">
        <div class="absolute inset-0 rounded-full" style="background: linear-gradient(180deg, #00D4D8 0%, #0A4B52 100%);"></div>
        <div class="absolute top-[55px] left-[55px] right-[55px] bottom-[55px] md:top-[75px] md:left-[75px] md:right-[75px] md:bottom-[75px] rounded-full bg-[#0E1022]"></div>
      </div>
      
      <!-- Content -->
      <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="page-title text-white mb-6">
          Legal Information & Policies
        </h1>
        
        <!-- Decorative Dots -->
        <div class="flex justify-center gap-2">
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400"></span>
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400"></span>
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400"></span>
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400"></span>
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400"></span>
        </div>
      </div>
    </section>

    <!-- Legal Links Content -->
    <section class="py-16" style="background-color: #F2F2F2;">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <a
            href="/legal/privacy-policy/"
            class="legal-card rounded-md px-8 pt-6 pb-5 hover:shadow-xl group block relative overflow-hidden"
          >
            <h3 class="text-xl font-bold text-white mb-2">
              Privacy Policy
            </h3>
            <div class="flex items-center gap-2">
              <span class="text-white text-sm font-medium">
                View Policy
              </span>
              <div class="flex items-center justify-center w-7 h-7 rounded-full bg-white/20 group-hover:bg-white/30 transition-colors flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7V17" />
                </svg>
              </div>
            </div>
          </a>

          <a
            href="/legal/code-of-conduct/"
            class="legal-card rounded-md px-8 pt-6 pb-5 hover:shadow-xl group block relative overflow-hidden"
          >
            <h3 class="text-xl font-bold text-white mb-2">
              Code of Conduct
            </h3>
            <div class="flex items-center gap-2">
              <span class="text-white text-sm font-medium">
                View Policy
              </span>
              <div class="flex items-center justify-center w-7 h-7 rounded-full bg-white/20 group-hover:bg-white/30 transition-colors flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7V17" />
                </svg>
              </div>
            </div>
          </a>

          <a
            href="/legal/transparency-integrity-policy/"
            class="legal-card rounded-md px-8 pt-6 pb-5 hover:shadow-xl group block relative overflow-hidden"
          >
            <h3 class="text-xl font-bold text-white mb-2">
              Transparency & Integrity Policy
            </h3>
            <div class="flex items-center gap-2">
              <span class="text-white text-sm font-medium">
                View Policy
              </span>
              <div class="flex items-center justify-center w-7 h-7 rounded-full bg-white/20 group-hover:bg-white/30 transition-colors flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7V17" />
                </svg>
              </div>
            </div>
          </a>

          <a
            href="/legal/gift-bag-policy/"
            class="legal-card rounded-md px-8 pt-6 pb-5 hover:shadow-xl group block relative overflow-hidden"
          >
            <h3 class="text-xl font-bold text-white mb-2">
              Gift Bag Policy
            </h3>
            <div class="flex items-center gap-2">
              <span class="text-white text-sm font-medium">
                View Policy
              </span>
              <div class="flex items-center justify-center w-7 h-7 rounded-full bg-white/20 group-hover:bg-white/30 transition-colors flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7V17" />
                </svg>
              </div>
            </div>
          </a>

          <a
            href="/legal/faq/"
            class="legal-card rounded-md px-8 pt-6 pb-5 hover:shadow-xl group block relative overflow-hidden"
          >
            <h3 class="text-xl font-bold text-white mb-2">
              FAQ
            </h3>
            <div class="flex items-center gap-2">
              <span class="text-white text-sm font-medium">
                View FAQ
              </span>
              <div class="flex items-center justify-center w-7 h-7 rounded-full bg-white/20 group-hover:bg-white/30 transition-colors flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7V17" />
                </svg>
              </div>
            </div>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .page-title {
    font-size: 35px;
    font-weight: 600;
  }

  .legal-card {
    background: linear-gradient(135deg, #4A1B5C 0%, #3A1447 100%);
    min-height: 130px;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease, box-shadow 0.3s ease !important;
    text-decoration: none !important;
    position: relative;
    z-index: 1;
  }

  .legal-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #5A2B6C 0%, #4A1857 100%);
    border-radius: inherit;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }

  .legal-card:hover {
    transform: translateY(-2px);
  }

  .legal-card:hover::before {
    opacity: 1;
  }

  .legal-card .flex.items-center.justify-center {
    transition: transform 0.3s ease;
  }

  .legal-card:hover .flex.items-center.justify-center {
    transform: rotate(45deg);
  }
</style>

