---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
---

<Layout
  title="404 - Page Not Found"
  description="The page you're looking for could not be found."
>
  <main class="min-h-screen flex items-center justify-center px-4 bg-[#0E1022]">
    <div class="max-w-2xl mx-auto text-center">
      <!-- 404 Number -->
      <h1 class="text-9xl font-bold text-white mb-4" style="text-shadow: 0 0 20px rgba(255, 255, 255, 0.3), 0 0 40px rgba(255, 255, 255, 0.2);">
        404
      </h1>

      <!-- Error Message -->
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Page Not Found
      </h2>

      <p class="text-lg text-gray-400 mb-8">
        Sorry, we couldn't find the page you're looking for. It might have been moved or deleted.
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button
          href="/"
          variant="primary"
          size="lg"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Go Home
        </Button>

        <button
          onclick="history.back()"
          class="btn inline-flex items-center justify-center font-medium rounded-sm transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed no-underline border-2 border-white text-white hover:bg-white hover:text-gray-900 focus:ring-white px-8 py-4 text-lg"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Go Back
        </button>
      </div>

      <!-- Optional: Helpful Links -->
      <div class="mt-12 pt-8 border-t border-gray-800">
        <p class="text-sm text-gray-500 mb-4">You might be interested in:</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/about-xr-awards" class="text-sm text-gray-400 hover:text-white transition-colors">
            About XR Awards
          </a>
          <a href="/categories" class="text-sm text-gray-400 hover:text-white transition-colors">
            Categories
          </a>
          <a href="/judges" class="text-sm text-gray-400 hover:text-white transition-colors">
            Judges
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>
