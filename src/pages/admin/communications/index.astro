---
/**
 * Admin Communications Dashboard
 * Lists all sent communications and allows composing new messages
 */
import AdminLayout from '../../../components/admin/AdminLayout.astro';
---

<AdminLayout title="Communications" activePage="communications">
  <div class="space-y-8">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Communications</h1>
        <p class="mt-1 text-sm text-gray-600">Send emails to judges, finalists, and other contacts</p>
      </div>
      <a
        href="/admin/communications/compose/"
        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium inline-flex items-center gap-2"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Compose Message
      </a>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="bg-white border border-gray-200 rounded-lg p-4">
        <p class="text-xs font-medium text-gray-500 uppercase">Total Sent</p>
        <p id="statTotalSent" class="text-2xl font-bold text-gray-900 mt-1">-</p>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-4">
        <p class="text-xs font-medium text-gray-500 uppercase">Scheduled</p>
        <p id="statScheduled" class="text-2xl font-bold text-amber-600 mt-1">-</p>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-4">
        <p class="text-xs font-medium text-gray-500 uppercase">Completed</p>
        <p id="statCompleted" class="text-2xl font-bold text-green-600 mt-1">-</p>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-4">
        <p class="text-xs font-medium text-gray-500 uppercase">Failed</p>
        <p id="statFailed" class="text-2xl font-bold text-red-600 mt-1">-</p>
      </div>
    </div>

    <!-- Filter -->
    <div class="bg-white border border-gray-200 rounded-lg p-4">
      <div class="flex flex-wrap gap-4 items-center">
        <select id="statusFilter" class="px-3 py-2 border border-gray-300 rounded-lg focus:outline-hidden focus:ring-2 focus:ring-blue-500 text-sm">
          <option value="">All Status</option>
          <option value="pending">Pending</option>
          <option value="scheduled">Scheduled</option>
          <option value="sending">Sending</option>
          <option value="completed">Completed</option>
          <option value="failed">Failed</option>
          <option value="partially_failed">Partially Failed</option>
        </select>
      </div>
    </div>

    <!-- Communications List -->
    <div id="communicationsList" class="space-y-4">
      <div class="text-center py-12">
        <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
        <p class="text-gray-500 mt-2">Loading communications...</p>
      </div>
    </div>

    <!-- Pagination -->
    <div id="pagination" class="hidden"></div>
  </div>
</AdminLayout>

<script>
  const accessToken = window.__SUPABASE_ACCESS_TOKEN__ || '';
  let communications: any[] = [];
  let pagination = { page: 1, limit: 20, total: 0, totalPages: 0 };
  let statusFilter = '';

  // Format date
  function formatDate(dateString: string | null): string {
    if (!dateString) return '-';
    const date = new Date(dateString);
    return date.toLocaleDateString('en-GB', {
      day: 'numeric',
      month: 'short',
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    });
  }

  // Get status badge HTML
  function getStatusBadge(status: string): string {
    const styles: Record<string, string> = {
      pending: 'bg-gray-100 text-gray-800',
      scheduled: 'bg-amber-100 text-amber-800',
      sending: 'bg-blue-100 text-blue-800',
      completed: 'bg-green-100 text-green-800',
      failed: 'bg-red-100 text-red-800',
      partially_failed: 'bg-orange-100 text-orange-800'
    };
    const style = styles[status] || 'bg-gray-100 text-gray-800';
    const label = status.replace('_', ' ').replace(/\b\w/g, l => l.toUpperCase());
    return `<span class="px-2 py-1 text-xs font-medium rounded ${style}">${label}</span>`;
  }

  // Escape HTML
  function escapeHtml(text: string | null): string {
    if (!text) return '';
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  // Load communications
  async function loadCommunications(page = 1) {
    try {
      const params = new URLSearchParams({
        page: page.toString(),
        limit: pagination.limit.toString()
      });

      if (statusFilter) {
        params.append('status', statusFilter);
      }

      const response = await fetch(`/api/communications/?${params.toString()}`, {
        headers: {
          'Authorization': `Bearer ${accessToken}`
        }
      });

      if (!response.ok) throw new Error('Failed to fetch communications');

      const data = await response.json();
      communications = data.communications || [];
      pagination = data.pagination || { page: 1, limit: 20, total: 0, totalPages: 0 };

      updateStats();
      renderCommunications();
      renderPagination();
    } catch (error) {
      console.error('Error loading communications:', error);
      document.getElementById('communicationsList')!.innerHTML = `
        <div class="text-center py-12">
          <p class="text-red-500">Failed to load communications. Please refresh the page.</p>
        </div>
      `;
    }
  }

  // Update stats
  function updateStats() {
    // For now, show total. In production, you'd want separate API calls for stats
    document.getElementById('statTotalSent')!.textContent = pagination.total.toString();
    
    // Count by status from current page (this is approximate)
    const scheduled = communications.filter(c => c.status === 'scheduled').length;
    const completed = communications.filter(c => c.status === 'completed').length;
    const failed = communications.filter(c => c.status === 'failed' || c.status === 'partially_failed').length;
    
    document.getElementById('statScheduled')!.textContent = scheduled.toString();
    document.getElementById('statCompleted')!.textContent = completed.toString();
    document.getElementById('statFailed')!.textContent = failed.toString();
  }

  // Render communications list
  function renderCommunications() {
    const list = document.getElementById('communicationsList')!;

    if (communications.length === 0) {
      list.innerHTML = `
        <div class="text-center py-12 bg-white border border-gray-200 rounded-lg">
          <svg class="w-12 h-12 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <p class="text-gray-500 mb-4">No communications found</p>
          <a href="/admin/communications/compose/" class="text-blue-600 hover:underline">Compose your first message →</a>
        </div>
      `;
      return;
    }

    const html = communications.map(comm => {
      const senderName = comm.user_profiles 
        ? `${comm.user_profiles.first_name || ''} ${comm.user_profiles.last_name || ''}`.trim()
        : 'Unknown';
      const senderPhoto = comm.user_profiles?.profile_photo_url;

      return `
        <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-sm transition-shadow">
          <div class="flex items-start justify-between gap-4">
            <div class="flex items-start gap-3 flex-1 min-w-0">
              ${senderPhoto 
                ? `<img src="${escapeHtml(senderPhoto)}" alt="${escapeHtml(senderName)}" class="w-10 h-10 rounded-full object-cover flex-shrink-0" />`
                : `<div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-500 flex-shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>`
              }
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 flex-wrap">
                  <h3 class="text-sm font-semibold text-gray-900 truncate">${escapeHtml(comm.subject)}</h3>
                  ${getStatusBadge(comm.status)}
                </div>
                <p class="text-xs text-gray-500 mt-1">
                  From: ${escapeHtml(senderName)} • Template: ${escapeHtml(comm.template_name)}
                </p>
                <p class="text-xs text-gray-400 mt-1">
                  ${comm.status === 'scheduled' ? `Scheduled for: ${formatDate(comm.scheduled_at)}` : `Created: ${formatDate(comm.created_at)}`}
                </p>
              </div>
            </div>
            <div class="flex flex-col items-end gap-2 flex-shrink-0">
              <div class="text-right">
                <p class="text-xs text-gray-500">Recipients</p>
                <p class="text-sm font-medium text-gray-900">${comm.recipient_count}</p>
              </div>
              <div class="text-right">
                <p class="text-xs text-gray-500">
                  <span class="text-green-600">${comm.sent_count || 0} sent</span>
                  ${comm.failed_count > 0 ? ` • <span class="text-red-600">${comm.failed_count} failed</span>` : ''}
                </p>
              </div>
            </div>
          </div>
        </div>
      `;
    }).join('');

    list.innerHTML = html;
  }

  // Render pagination
  function renderPagination() {
    const paginationEl = document.getElementById('pagination')!;

    if (pagination.totalPages <= 1) {
      paginationEl.classList.add('hidden');
      return;
    }

    paginationEl.classList.remove('hidden');
    paginationEl.innerHTML = `
      <div class="flex items-center justify-between bg-white border border-gray-200 rounded-lg p-4">
        <div class="text-sm text-gray-700">
          Showing ${((pagination.page - 1) * pagination.limit) + 1} to ${Math.min(pagination.page * pagination.limit, pagination.total)} of ${pagination.total} results
        </div>
        <div class="flex items-center space-x-2">
          <button
            onclick="loadCommunications(${pagination.page - 1})"
            ${pagination.page <= 1 ? 'disabled' : ''}
            class="px-3 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Previous
          </button>
          <span class="px-3 py-2 text-sm text-gray-700">
            Page ${pagination.page} of ${pagination.totalPages}
          </span>
          <button
            onclick="loadCommunications(${pagination.page + 1})"
            ${pagination.page >= pagination.totalPages ? 'disabled' : ''}
            class="px-3 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Next
          </button>
        </div>
      </div>
    `;
  }

  // Filter change
  document.getElementById('statusFilter')!.addEventListener('change', (e) => {
    statusFilter = (e.target as HTMLSelectElement).value;
    loadCommunications(1);
  });

  // Make loadCommunications globally accessible
  (window as any).loadCommunications = loadCommunications;

  // Initial load
  loadCommunications();
</script>

