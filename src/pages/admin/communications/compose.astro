  function toggleFilter(type: string, value: string, label: string, mode: 'include' | 'exclude') {
    // Find existing filter with same type and value
    const existingIndex = activeFilters.findIndex(f => f.type === type && f.value === value);
    
    if (existingIndex >= 0) {
      const existing = activeFilters[existingIndex];
      if (existing.mode === mode) {
        // Same mode - remove filter
        activeFilters.splice(existingIndex, 1);
      } else {
        // Different mode - update to new mode
        activeFilters[existingIndex].mode = mode;
      }
    } else {
      // Add new filter
      activeFilters.push({ type, value, label, mode });
    }
    
