      const includeFilters: Record<string, string[]> = { event: [], type: [], winnerType: [] };
      const excludeFilters: Record<string, string[]> = { event: [], type: [], winnerType: [] };
      
      activeFilters.forEach(f => {
        if (f.mode === 'include') {
          includeFilters[f.type].push(f.value);
        } else {
          excludeFilters[f.type].push(f.value);
        }
      });
      
      const params = new URLSearchParams();
      
      // Event filters
      if (includeFilters.event.length > 0) {
        params.append('event_ids', includeFilters.event.join(','));
        // Update activeEvent based on first selected event
        activeEvent = events.find(e => e.id === includeFilters.event[0]) || activeEvent;
      }
      if (excludeFilters.event.length > 0) {
        params.append('exclude_event_ids', excludeFilters.event.join(','));
      }
      
