    messageContent.value = text.substring(0, start) + before + selected + after + text.substring(end);
    
    // Position cursor after the wrapped text or select the placeholder
    if (selected) {
      messageContent.selectionStart = start + before.length;
      messageContent.selectionEnd = end + before.length;
    } else {
      messageContent.selectionStart = start + before.length;
      messageContent.selectionEnd = start + before.length;
    }
    
    messageContent.focus();
    charCount.textContent = messageContent.value.length.toString();
