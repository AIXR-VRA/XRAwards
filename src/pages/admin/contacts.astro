<script>
  const accessToken = window.__SUPABASE_ACCESS_TOKEN__ || '';
  let contacts: any[] = [];
  let judges: any[] = [];
  let finalists: any[] = [];
  let sponsors: any[] = [];
  let filters = {
    search: '',
    contact_type: '', // Filter by derived type from junction tables
    status: ''
  };
  
  // Track pending association changes for the current edit
  let pendingAssociations = {
    finalists: [] as any[],
    judges: [] as any[],
    sponsors: [] as any[],
    addFinalistIds: [] as string[],
    removeFinalistIds: [] as string[],
    addJudgeIds: [] as string[],
    removeJudgeIds: [] as string[],
    addSponsorIds: [] as string[],
    removeSponsorIds: [] as string[],
  };
  
  function resetPendingAssociations() {
    pendingAssociations = {
      finalists: [],
      judges: [],
      sponsors: [],
      addFinalistIds: [],
      removeFinalistIds: [],
      addJudgeIds: [],
      removeJudgeIds: [],
      addSponsorIds: [],
      removeSponsorIds: [],
    };
  }

  // Fetch contacts
  async function loadContacts() {
    try {
      const params = new URLSearchParams();
      if (filters.search) params.append('search', filters.search);
      if (filters.contact_type) params.append('contact_type', filters.contact_type);
      
      const response = await fetch(`/api/contacts/?${params.toString()}`, {
        headers: {
          'Authorization': `Bearer ${accessToken}`
        }
      });

      if (!response.ok) throw new Error('Failed to fetch contacts');

      const data = await response.json();
      contacts = data.contacts || [];
      
      // Filter by status if needed
      if (filters.status === 'active') {
        contacts = contacts.filter(c => c.is_active);
      } else if (filters.status === 'inactive') {
        contacts = contacts.filter(c => !c.is_active);
      }

      renderContacts();
    } catch (error) {
      console.error('Error loading contacts:', error);
      document.getElementById('contactsList')!.innerHTML = `
        <div class="text-center py-12">
          <p class="text-red-500">Failed to load contacts. Please refresh the page.</p>
        </div>
      `;
    }
  }

  // Fetch judges and finalists for dropdowns
  async function loadJudges() {
    try {
      const response = await fetch('/api/judges/');
      if (response.ok) {
        const data = await response.json();
        judges = data.judges || [];
      }
    } catch (error) {
      console.error('Error loading judges:', error);
    }
  }

  async function loadFinalists() {
    try {
      const response = await fetch('/api/finalists/?limit=1000');
      if (response.ok) {
        const data = await response.json();
        finalists = data.finalists || [];
      }
    } catch (error) {
      console.error('Error loading finalists:', error);
    }
  }

  async function loadSponsors() {
    try {
      const response = await fetch('/api/sponsors/');
      if (response.ok) {
        const data = await response.json();
        sponsors = data.sponsors || [];
      }
    } catch (error) {
      console.error('Error loading sponsors:', error);
    }
  }

  // Render contacts list
  function renderContacts() {
    const list = document.getElementById('contactsList')!;
    
    if (contacts.length === 0) {
      list.innerHTML = `
        <div class="text-center py-12">
          <p class="text-gray-500">No contacts found. Add your first contact!</p>
        </div>
      `;
      return;
    }

    const html = contacts.map(contact => {
      const name = [contact.first_name, contact.last_name].filter(Boolean).join(' ') || 'N/A';
      
      // Build type badges from contact_types array (derived from junction tables)
      const types = contact.contact_types || [];
      let typeBadgesHtml = '';
      if (types.length === 0) {
        typeBadgesHtml = '<span class="px-2 py-1 text-xs font-medium rounded bg-gray-100 text-gray-800">General</span>';
      } else {
        typeBadgesHtml = types.map((t: string) => {
          const label = t.charAt(0).toUpperCase() + t.slice(1);
          const colorClass = t === 'judge' ? 'bg-purple-100 text-purple-800' :
                            t === 'finalist' ? 'bg-blue-100 text-blue-800' :
                            t === 'sponsor' ? 'bg-green-100 text-green-800' :
                            'bg-gray-100 text-gray-800';
          return `<span class="px-2 py-1 text-xs font-medium rounded ${colorClass}">${escapeHtml(label)}</span>`;
        }).join('');
      }
      
      // Build associations display
      let associationsHtml = '';
      if (contact.finalists && contact.finalists.length > 0) {
        const finalistNames = contact.finalists.map((f: any) => f?.title || 'Unknown').join(', ');
        associationsHtml += `
          <p class="text-sm text-gray-600 mb-1">
            <span class="font-medium">Finalists:</span> ${escapeHtml(finalistNames)} <span class="text-gray-400">(${contact.finalists.length})</span>
          </p>
        `;
      }
      if (contact.judges && contact.judges.length > 0) {
        const judgeNames = contact.judges.map((j: any) => j ? `${j.first_name} ${j.last_name}` : 'Unknown').join(', ');
        associationsHtml += `
          <p class="text-sm text-gray-600 mb-1">
            <span class="font-medium">Judges:</span> ${escapeHtml(judgeNames)} <span class="text-gray-400">(${contact.judges.length})</span>
          </p>
        `;
      }
      if (contact.sponsors && contact.sponsors.length > 0) {
        const sponsorNames = contact.sponsors.map((s: any) => s?.name || 'Unknown').join(', ');
        associationsHtml += `
          <p class="text-sm text-gray-600 mb-1">
            <span class="font-medium">Sponsors:</span> ${escapeHtml(sponsorNames)} <span class="text-gray-400">(${contact.sponsors.length})</span>
          </p>
        `;
      }
      
      return `
        <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-sm transition-shadow">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center gap-2 flex-wrap mb-2">
                <h3 class="text-lg font-semibold text-gray-900">${escapeHtml(name)}</h3>
                ${typeBadgesHtml}
                ${contact.is_active ? 
                  '<span class="px-2 py-1 text-xs font-medium rounded bg-green-100 text-green-800">Active</span>' :
                  '<span class="px-2 py-1 text-xs font-medium rounded bg-gray-100 text-gray-800">Inactive</span>'
                }
              </div>
              <p class="text-sm text-gray-600 mb-1">
                <span class="font-medium">Email:</span> ${escapeHtml(contact.email)}
              </p>
              ${contact.organization ? `
                <p class="text-sm text-gray-600 mb-1">
                  <span class="font-medium">Organization:</span> ${escapeHtml(contact.organization)}
                </p>
              ` : ''}
              ${contact.job_title ? `
                <p class="text-sm text-gray-600 mb-1">
                  <span class="font-medium">Job Title:</span> ${escapeHtml(contact.job_title)}
                </p>
              ` : ''}
              ${contact.phone_number ? `
                <p class="text-sm text-gray-600 mb-1">
                  <span class="font-medium">Phone:</span> ${escapeHtml(contact.phone_number)}
                </p>
              ` : ''}
              ${associationsHtml}
              <p class="text-xs text-gray-400 mt-2 font-mono">ID: ${contact.id}</p>
            </div>
            <div class="flex space-x-2 ml-4">
              <button
                onclick="editContact('${contact.id}')"
                class="px-3 py-2 text-sm text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
              >
                Edit
              </button>
              <button
                onclick="deleteContact('${contact.id}', '${escapeHtml(contact.email)}')"
                class="px-3 py-2 text-sm text-red-600 hover:bg-red-50 rounded-lg transition-colors"
              >
                Delete
              </button>
            </div>
          </div>
        </div>
      `;
    }).join('');

    list.innerHTML = html;
  }

  // Helper to escape HTML
  function escapeHtml(text: string): string {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  // Modal controls
  const modal = document.getElementById('contactModal')!;
  const modalTitle = document.getElementById('contactModalTitle')!;
  const form = document.getElementById('contactModalForm') as HTMLFormElement;
  const modalError = document.getElementById('contactModalError')!;
  
  if (!form) {
    console.error('Contact form not found!');
  }
  
  // Close button handlers
  document.getElementById('contactModalCloseBtn')?.addEventListener('click', closeContactModal);
  document.getElementById('contactModalCancelBtn')?.addEventListener('click', closeContactModal);

  function openContactModal(title: string) {
    if (modalTitle) modalTitle.textContent = title;
    if (modalError) modalError.classList.add('hidden');
    modal.classList.remove('hidden');
  }

  function closeContactModal() {
    modal.classList.add('hidden');
    if (form) form.reset();
    const contactIdEl = document.getElementById('contactId') as HTMLInputElement;
    if (contactIdEl) contactIdEl.value = '';
    
    // Reset phone number fields
    const phoneCountryCodeEl = document.getElementById('phone_country_code') as HTMLSelectElement;
    const phoneNumberEl = document.getElementById('phone_number') as HTMLInputElement;
    if (phoneCountryCodeEl) phoneCountryCodeEl.value = '+1';
    if (phoneNumberEl) phoneNumberEl.value = '';
    
    // Clear associations lists
    const judgeAssociationsList = document.getElementById('judgeAssociationsList');
    const finalistAssociationsList = document.getElementById('finalistAssociationsList');
    const sponsorAssociationsList = document.getElementById('sponsorAssociationsList');
    if (judgeAssociationsList) judgeAssociationsList.innerHTML = '<p class="text-xs text-gray-400 italic">No judges linked</p>';
    if (finalistAssociationsList) finalistAssociationsList.innerHTML = '<p class="text-xs text-gray-400 italic">No finalists linked</p>';
    if (sponsorAssociationsList) sponsorAssociationsList.innerHTML = '<p class="text-xs text-gray-400 italic">No sponsors linked</p>';
    
    // Reset pending associations
    resetPendingAssociations();
    
    // Clear dropdowns
    if ((window as any).clearDropdown_judge_id) {
      (window as any).clearDropdown_judge_id();
    }
    if ((window as any).clearDropdown_finalist_id) {
      (window as any).clearDropdown_finalist_id();
    }
    if ((window as any).clearDropdown_sponsor_id) {
      (window as any).clearDropdown_sponsor_id();
    }
  }

  function populateJudgeDropdown() {
    // Filter out already associated judges
    const existingJudgeIds = pendingAssociations.judges.map((j: any) => j.id);
    const availableJudges = judges.filter(j => !existingJudgeIds.includes(j.id));
    
    const options = availableJudges.map(judge => ({
      id: judge.id,
      text: `${judge.first_name} ${judge.last_name}${judge.organization ? ` - ${judge.organization}` : ''}`
    }));
    
    if ((window as any).updateDropdown_judge_id) {
      (window as any).updateDropdown_judge_id(options);
    }
  }

  function populateFinalistDropdown() {
    // Filter out already associated finalists
    const existingFinalistIds = pendingAssociations.finalists.map((f: any) => f.id);
    const availableFinalists = finalists.filter(f => !existingFinalistIds.includes(f.id));
    
    const options = availableFinalists.map(finalist => ({
      id: finalist.id,
      text: `${finalist.title}${finalist.organization ? ` - ${finalist.organization}` : ''}`
    }));
    
    if ((window as any).updateDropdown_finalist_id) {
      (window as any).updateDropdown_finalist_id(options);
    }
  }

  function populateSponsorDropdown() {
    // Filter out already associated sponsors
    const existingSponsorIds = pendingAssociations.sponsors.map((s: any) => s.id);
    const availableSponsors = sponsors.filter(s => !existingSponsorIds.includes(s.id));
    
    const options = availableSponsors.map(sponsor => ({
      id: sponsor.id,
      text: sponsor.name
    }));
    
    if ((window as any).updateDropdown_sponsor_id) {
      (window as any).updateDropdown_sponsor_id(options);
    }
  }
  
  function populateAllDropdowns() {
    populateFinalistDropdown();
    populateJudgeDropdown();
    populateSponsorDropdown();
  }

  // Add contact button
  document.getElementById('addContactBtn')!.addEventListener('click', () => {
    openContactModal('Add Contact');
    // Reset associations and populate dropdowns for new contact
    resetPendingAssociations();
    renderAssociationsList('finalistAssociationsList', [], 'finalist');
    renderAssociationsList('judgeAssociationsList', [], 'judge');
    renderAssociationsList('sponsorAssociationsList', [], 'sponsor');
    populateAllDropdowns();
  });

  // Form submission
  if (!form) {
    console.error('Cannot attach form submit handler - form not found');
  } else {
    console.log('Attaching form submit handler');
  }
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    console.log('Form submitted');
    modalError.classList.add('hidden');

    const contactId = (document.getElementById('contactId') as HTMLInputElement).value;
    const email = (document.getElementById('email') as HTMLInputElement).value;
    const firstName = (document.getElementById('first_name') as HTMLInputElement).value;
    const lastName = (document.getElementById('last_name') as HTMLInputElement).value;
    const organization = (document.getElementById('organization') as HTMLInputElement).value;
    const jobTitle = (document.getElementById('job_title') as HTMLInputElement).value;
    const countryCode = (document.getElementById('phone_country_code') as HTMLSelectElement).value;
    const phoneNumber = (document.getElementById('phone_number') as HTMLInputElement).value;
    const fullPhoneNumber = phoneNumber ? `${countryCode}${phoneNumber}` : null;
    const isActive = (document.getElementById('is_active') as HTMLInputElement).checked;

    if (!email) {
      modalError.textContent = 'Email is required';
      modalError.classList.remove('hidden');
      return;
    }

    try {
      const url = '/api/contacts/';
      const method = contactId ? 'PUT' : 'POST';
      const body: any = {
        email,
        first_name: firstName || null,
        last_name: lastName || null,
        organization: organization || null,
        job_title: jobTitle || null,
        phone_number: fullPhoneNumber,
        is_active: isActive
      };

      if (contactId) {
        // Editing existing contact
        body.id = contactId;
        // Include association changes
        if (pendingAssociations.addFinalistIds.length > 0) {
          body.add_finalist_ids = pendingAssociations.addFinalistIds;
        }
        if (pendingAssociations.removeFinalistIds.length > 0) {
          body.remove_finalist_ids = pendingAssociations.removeFinalistIds;
        }
        if (pendingAssociations.addJudgeIds.length > 0) {
          body.add_judge_ids = pendingAssociations.addJudgeIds;
        }
        if (pendingAssociations.removeJudgeIds.length > 0) {
          body.remove_judge_ids = pendingAssociations.removeJudgeIds;
        }
        if (pendingAssociations.addSponsorIds.length > 0) {
          body.add_sponsor_ids = pendingAssociations.addSponsorIds;
        }
        if (pendingAssociations.removeSponsorIds.length > 0) {
          body.remove_sponsor_ids = pendingAssociations.removeSponsorIds;
        }
      } else {
        // Creating new contact - include initial associations (types derived from these)
        if (pendingAssociations.finalists.length > 0) {
          body.finalist_ids = pendingAssociations.finalists.map((f: any) => f.id);
        }
        if (pendingAssociations.judges.length > 0) {
          body.judge_ids = pendingAssociations.judges.map((j: any) => j.id);
        }
        if (pendingAssociations.sponsors.length > 0) {
          body.sponsor_ids = pendingAssociations.sponsors.map((s: any) => s.id);
        }
      }

      console.log('Sending request:', { url, method, body });
      const response = await fetch(url, {
        method,
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${accessToken}`
        },
        body: JSON.stringify(body)
      });

      console.log('Response status:', response.status);
      const data = await response.json();
      console.log('Response data:', data);

      if (!response.ok) {
        throw new Error(data.error || 'Failed to save contact');
      }

      console.log('Contact saved successfully');
      closeContactModal();
      await loadContacts();
    } catch (error) {
      console.error('Error saving contact:', error);
      const errorMessage = error instanceof Error ? error.message : 'Failed to save contact';
      modalError.textContent = errorMessage;
      modalError.classList.remove('hidden');
    }
  });

  // Render associations list with remove button
  function renderAssociationsList(containerId: string, items: any[], type: 'finalist' | 'judge' | 'sponsor') {
    const container = document.getElementById(containerId);
    if (!container) return;
    
    if (!items || items.length === 0) {
      container.innerHTML = `<p class="text-xs text-gray-400 italic">No ${type}s linked</p>`;
      return;
    }
    
    const html = items.map(item => {
      if (!item) return '';
      let label: string;
      if (type === 'finalist') {
        label = `${item.title}${item.organization ? ` - ${item.organization}` : ''}`;
      } else if (type === 'judge') {
        label = `${item.first_name} ${item.last_name}${item.organization ? ` - ${item.organization}` : ''}`;
      } else {
        label = item.name;
      }
      return `
        <div class="flex items-center justify-between px-2 py-1.5 bg-gray-50 rounded border border-gray-200 text-sm" data-id="${item.id}">
          <span class="text-gray-700 truncate flex-1">${escapeHtml(label)}</span>
          <button
            type="button"
            class="ml-2 text-red-500 hover:text-red-700 text-xs px-1"
            onclick="removeAssociation('${type}', '${item.id}')"
            title="Remove"
          >âœ•</button>
        </div>
      `;
    }).filter(Boolean).join('');
    
    container.innerHTML = html || `<p class="text-xs text-gray-400 italic">No ${type}s linked</p>`;
  }
  
  // Handle adding association from dropdown
  function handleAssociationAdd(type: 'finalist' | 'judge' | 'sponsor', id: string) {
    const isEditing = !!(document.getElementById('contactId') as HTMLInputElement)?.value;
    
    if (type === 'finalist') {
      const finalist = finalists.find(f => f.id === id);
      if (finalist && !pendingAssociations.finalists.find((f: any) => f.id === id)) {
        pendingAssociations.finalists.push(finalist);
        if (isEditing) {
          // Track as addition only if not in removeFinalistIds
          const removeIdx = pendingAssociations.removeFinalistIds.indexOf(id);
          if (removeIdx > -1) {
            pendingAssociations.removeFinalistIds.splice(removeIdx, 1);
          } else {
            pendingAssociations.addFinalistIds.push(id);
          }
        }
        renderAssociationsList('finalistAssociationsList', pendingAssociations.finalists, 'finalist');
        populateFinalistDropdown();
      }
    } else if (type === 'judge') {
      const judge = judges.find(j => j.id === id);
      if (judge && !pendingAssociations.judges.find((j: any) => j.id === id)) {
        pendingAssociations.judges.push(judge);
        if (isEditing) {
          const removeIdx = pendingAssociations.removeJudgeIds.indexOf(id);
          if (removeIdx > -1) {
            pendingAssociations.removeJudgeIds.splice(removeIdx, 1);
          } else {
            pendingAssociations.addJudgeIds.push(id);
          }
        }
        renderAssociationsList('judgeAssociationsList', pendingAssociations.judges, 'judge');
        populateJudgeDropdown();
      }
    } else if (type === 'sponsor') {
      const sponsor = sponsors.find(s => s.id === id);
      if (sponsor && !pendingAssociations.sponsors.find((s: any) => s.id === id)) {
        pendingAssociations.sponsors.push(sponsor);
        if (isEditing) {
          const removeIdx = pendingAssociations.removeSponsorIds.indexOf(id);
          if (removeIdx > -1) {
            pendingAssociations.removeSponsorIds.splice(removeIdx, 1);
          } else {
            pendingAssociations.addSponsorIds.push(id);
          }
        }
        renderAssociationsList('sponsorAssociationsList', pendingAssociations.sponsors, 'sponsor');
        populateSponsorDropdown();
      }
    }
    
    // Clear the dropdown selection
    if ((window as any)[`clearDropdown_${type}_id`]) {
      (window as any)[`clearDropdown_${type}_id`]();
    }
  }
  
  // Remove association
  (window as any).removeAssociation = function(type: 'finalist' | 'judge' | 'sponsor', id: string) {
    const isEditing = !!(document.getElementById('contactId') as HTMLInputElement)?.value;
    
    if (type === 'finalist') {
      const idx = pendingAssociations.finalists.findIndex((f: any) => f.id === id);
      if (idx > -1) {
        pendingAssociations.finalists.splice(idx, 1);
        if (isEditing) {
          // Track as removal only if not in addFinalistIds
          const addIdx = pendingAssociations.addFinalistIds.indexOf(id);
          if (addIdx > -1) {
            pendingAssociations.addFinalistIds.splice(addIdx, 1);
          } else {
            pendingAssociations.removeFinalistIds.push(id);
          }
        }
        renderAssociationsList('finalistAssociationsList', pendingAssociations.finalists, 'finalist');
        populateFinalistDropdown();
      }
    } else if (type === 'judge') {
      const idx = pendingAssociations.judges.findIndex((j: any) => j.id === id);
      if (idx > -1) {
        pendingAssociations.judges.splice(idx, 1);
        if (isEditing) {
          const addIdx = pendingAssociations.addJudgeIds.indexOf(id);
          if (addIdx > -1) {
            pendingAssociations.addJudgeIds.splice(addIdx, 1);
          } else {
            pendingAssociations.removeJudgeIds.push(id);
          }
        }
        renderAssociationsList('judgeAssociationsList', pendingAssociations.judges, 'judge');
        populateJudgeDropdown();
      }
    } else if (type === 'sponsor') {
      const idx = pendingAssociations.sponsors.findIndex((s: any) => s.id === id);
      if (idx > -1) {
        pendingAssociations.sponsors.splice(idx, 1);
        if (isEditing) {
          const addIdx = pendingAssociations.addSponsorIds.indexOf(id);
          if (addIdx > -1) {
            pendingAssociations.addSponsorIds.splice(addIdx, 1);
          } else {
            pendingAssociations.removeSponsorIds.push(id);
          }
        }
        renderAssociationsList('sponsorAssociationsList', pendingAssociations.sponsors, 'sponsor');
        populateSponsorDropdown();
      }
    }
  };

  // Edit contact
  (window as any).editContact = async function(id: string) {
    const contact = contacts.find(c => c.id === id);
    if (!contact) return;

    openContactModal('Edit Contact');
    
    // Reset and initialize pending associations with current values
    resetPendingAssociations();
    pendingAssociations.finalists = [...(contact.finalists || [])].filter(Boolean);
    pendingAssociations.judges = [...(contact.judges || [])].filter(Boolean);
    pendingAssociations.sponsors = [...(contact.sponsors || [])].filter(Boolean);
    
    // Render all association lists
    renderAssociationsList('finalistAssociationsList', pendingAssociations.finalists, 'finalist');
    renderAssociationsList('judgeAssociationsList', pendingAssociations.judges, 'judge');
    renderAssociationsList('sponsorAssociationsList', pendingAssociations.sponsors, 'sponsor');
    
    // Populate all dropdowns
    populateAllDropdowns();

    // Populate form
    (document.getElementById('contactId') as HTMLInputElement).value = contact.id;
    (document.getElementById('email') as HTMLInputElement).value = contact.email || '';
    (document.getElementById('first_name') as HTMLInputElement).value = contact.first_name || '';
    (document.getElementById('last_name') as HTMLInputElement).value = contact.last_name || '';
    (document.getElementById('organization') as HTMLInputElement).value = contact.organization || '';
    (document.getElementById('job_title') as HTMLInputElement).value = contact.job_title || '';
    
    // Parse and populate phone number
    if (contact.phone_number) {
      const phoneMatch = contact.phone_number.match(/^(\+\d{1,4})(.+)$/);
      if (phoneMatch) {
        const countryCode = phoneMatch[1];
        const phoneNumber = phoneMatch[2];
        const countryCodeSelect = document.getElementById('phone_country_code') as HTMLSelectElement;
        if (countryCodeSelect) {
          const option = Array.from(countryCodeSelect.options).find(opt => opt.value === countryCode);
          countryCodeSelect.value = option ? countryCode : '+1';
        }
        (document.getElementById('phone_number') as HTMLInputElement).value = phoneNumber;
      } else {
        (document.getElementById('phone_number') as HTMLInputElement).value = contact.phone_number;
      }
    } else {
      (document.getElementById('phone_number') as HTMLInputElement).value = '';
      (document.getElementById('phone_country_code') as HTMLSelectElement).value = '+1';
    }
    
    (document.getElementById('is_active') as HTMLInputElement).checked = contact.is_active !== false;
  };

  // Delete contact
  (window as any).deleteContact = async function(id: string, email: string) {
    if (!confirm(`Are you sure you want to delete the contact "${email}"?`)) return;

    try {
      const response = await fetch('/api/contacts/', {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${accessToken}`
        },
        body: JSON.stringify({ id })
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || 'Failed to delete contact');
      }

      await loadContacts();
    } catch (error) {
      console.error('Error deleting contact:', error);
      alert(error instanceof Error ? error.message : 'Failed to delete contact');
    }
  };

  // Filters
  let searchTimeout: NodeJS.Timeout;
  document.getElementById('searchInput')!.addEventListener('input', (e) => {
    filters.search = (e.target as HTMLInputElement).value;
    clearTimeout(searchTimeout);
    searchTimeout = setTimeout(() => {
      loadContacts();
    }, 500);
  });

  document.getElementById('contactTypeFilter')!.addEventListener('change', (e) => {
    filters.contact_type = (e.target as HTMLSelectElement).value;
    loadContacts();
  });

  document.getElementById('statusFilter')!.addEventListener('change', (e) => {
    filters.status = (e.target as HTMLSelectElement).value;
    loadContacts();
  });

  // Custom searchable dropdown functions
  function initSearchableDropdown(dropdownId: string, entityType: 'finalist' | 'judge' | 'sponsor') {
    const container = document.querySelector(`[data-select-id="${dropdownId}"]`) as HTMLElement;
    if (!container) return;
    
    const button = document.getElementById(`${dropdownId}_btn`) as HTMLButtonElement;
    const dropdown = document.getElementById(`${dropdownId}_dropdown`) as HTMLElement;
    const searchInput = document.getElementById(`${dropdownId}_search`) as HTMLInputElement;
    const optionsContainer = document.getElementById(`${dropdownId}_options`) as HTMLElement;
    const hiddenInput = document.getElementById(dropdownId) as HTMLInputElement;
    const textSpan = document.getElementById(`${dropdownId}_text`) as HTMLElement;
    
    if (!button || !dropdown || !optionsContainer) return;
    
    let isOpen = false;
    let allOptions: { id: string; text: string }[] = [];
    let filteredOptions: { id: string; text: string }[] = [];
    
    // Toggle dropdown
    const toggleDropdown = () => {
      isOpen = !isOpen;
      if (isOpen) {
        dropdown.classList.remove('hidden');
        if (searchInput) {
          setTimeout(() => searchInput.focus(), 0);
        }
      } else {
        dropdown.classList.add('hidden');
        if (searchInput) {
          searchInput.value = '';
          filteredOptions = [...allOptions];
          renderOptions();
        }
      }
    };
    
    // Render options
    const renderOptions = () => {
      if (filteredOptions.length === 0) {
        optionsContainer.innerHTML = '<div class="px-3 py-2 text-sm text-gray-500">No options found</div>';
        return;
      }
      
      optionsContainer.innerHTML = filteredOptions.map(opt => `
        <div
          class="px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 cursor-pointer"
          data-value="${opt.id}"
        >
          ${escapeHtml(opt.text)}
        </div>
      `).join('');
      
      // Add click handlers
      optionsContainer.querySelectorAll('[data-value]').forEach(el => {
        el.addEventListener('click', (e) => {
          const value = (e.currentTarget as HTMLElement).dataset.value || '';
          const option = allOptions.find(o => o.id === value);
          if (option) {
            selectOption(option);
          }
        });
      });
    };
    
    // Select an option - adds to association list
    const selectOption = (option: { id: string; text: string }) => {
      // Add to associations
      handleAssociationAdd(entityType, option.id);
      toggleDropdown();
    };
    
    // Update options
    const updateOptions = (options: { id: string; text: string }[]) => {
      allOptions = options;
      filteredOptions = [...allOptions];
      renderOptions();
    };
    
    // Search filter
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        const term = (e.target as HTMLInputElement).value.toLowerCase().trim();
        filteredOptions = allOptions.filter(opt => 
          opt.text.toLowerCase().includes(term)
        );
        renderOptions();
      });
    }
    
    // Button click
    button.addEventListener('click', (e) => {
      e.stopPropagation();
      toggleDropdown();
    });
    
    // Close on outside click
    document.addEventListener('click', (e) => {
      if (!container.contains(e.target as Node)) {
        if (isOpen) {
          toggleDropdown();
        }
      }
    });
    
    // Store update function
    (window as any)[`updateDropdown_${dropdownId}`] = updateOptions;
    (window as any)[`clearDropdown_${dropdownId}`] = () => {
      if (hiddenInput) hiddenInput.value = '';
      const placeholders: Record<string, string> = {
        'judge_id': '+ Add judge...',
        'finalist_id': '+ Add finalist...',
        'sponsor_id': '+ Add sponsor...'
      };
      if (textSpan) {
        textSpan.textContent = placeholders[dropdownId] || '+ Add...';
        textSpan.classList.remove('text-gray-900');
        textSpan.classList.add('text-gray-400');
      }
    };
  }

  // Initialize
  (async () => {
    await Promise.all([loadJudges(), loadFinalists(), loadSponsors()]);
    await loadContacts();
    
    // Initialize searchable dropdowns for judge, finalist, and sponsor selection
    initSearchableDropdown('judge_id', 'judge');
    initSearchableDropdown('finalist_id', 'finalist');
    initSearchableDropdown('sponsor_id', 'sponsor');
  })();
</script>

