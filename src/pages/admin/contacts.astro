---
/**
 * Admin Contacts Management Page
 */
import AdminLayout from '../../components/admin/AdminLayout.astro';
import Modal from '../../components/admin/Modal.astro';

---

<AdminLayout title="Contacts" activePage="contacts">
  <div class="space-y-8">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Contacts</h1>
        <p class="mt-2 text-gray-600">Manage contacts for communications. Types are derived from associations.</p>
      </div>
      <button
        id="addContactBtn"
        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium"
      >
        + Add Contact
      </button>
    </div>

    <!-- Advanced Filter & Search -->
    <div class="bg-white border border-gray-200 rounded-lg p-4">
      <!-- Top Row: Search & Export -->
      <div class="flex items-center justify-between gap-4 mb-4">
        <input
          type="text"
          id="searchInput"
          placeholder="Search contacts..."
          class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-hidden focus:ring-2 focus:ring-blue-500 max-w-md"
        />
        <button
          id="exportCsvBtn"
          class="px-4 py-2 border border-gray-300 text-gray-700 bg-white rounded-lg hover:bg-gray-50 transition-colors font-medium flex items-center gap-2"
        >
          <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3" />
          </svg>
          Export CSV
        </button>
      </div>

      <!-- Filter Pills UI -->
      <div class="relative">
        <!-- Filter Buttons & Active Pills -->
        <div id="filterContainer" class="flex flex-wrap gap-2 items-center">
          <!-- Event Filter Button -->
          <button
            type="button"
            data-filter="event"
            class="filter-btn px-3 py-1.5 rounded-full text-sm border bg-white hover:ring-1 hover:ring-gray-200 flex items-center gap-2 cursor-pointer transition-colors border-gray-300"
          >
            <span>Event</span>
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <!-- Type Filter Button -->
          <button
            type="button"
            data-filter="type"
            class="filter-btn px-3 py-1.5 rounded-full text-sm border bg-white hover:ring-1 hover:ring-gray-200 flex items-center gap-2 cursor-pointer transition-colors border-gray-300"
          >
            <span>Type</span>
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <!-- Winner Type Filter Button -->
          <button
            type="button"
            data-filter="winnerType"
            class="filter-btn px-3 py-1.5 rounded-full text-sm border bg-white hover:ring-1 hover:ring-gray-200 flex items-center gap-2 cursor-pointer transition-colors border-gray-300"
          >
            <span>Winner Type</span>
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <!-- Status Filter Button -->
          <button
            type="button"
            data-filter="status"
            class="filter-btn px-3 py-1.5 rounded-full text-sm border bg-white hover:ring-1 hover:ring-gray-200 flex items-center gap-2 cursor-pointer transition-colors border-gray-300"
          >
            <span>Status</span>
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <!-- Active Filter Pills Container -->
          <div id="activeFilterPills" class="contents"></div>
          
          <!-- Clear All Button (hidden when no filters) -->
          <button
            type="button"
            id="clearAllFiltersBtn"
            class="hidden items-center gap-1 text-sm text-gray-500 hover:text-gray-700 ml-2"
          >
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            Clear all
