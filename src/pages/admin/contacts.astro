<script>
  const accessToken = window.__SUPABASE_ACCESS_TOKEN__ || '';
  let contacts: any[] = [];
  let judges: any[] = [];
  let finalists: any[] = [];
  let sponsors: any[] = [];
  let events: any[] = [];
  // Filter State
  interface ActiveFilter {
    type: string;
    value: string;
    label: string;
    mode: 'include' | 'exclude';
  }
  
  let activeFilters: ActiveFilter[] = [];
  let activeFilterDropdown: string | null = null;
  let filters = { search: '' }; // Keep simple search separate

  // Filter options definitions
  const typeFilterOptions = [
    { id: 'judge', name: 'Judge' },
    { id: 'finalist', name: 'Finalist' },
    { id: 'sponsor', name: 'Sponsor' },
    { id: 'attendee', name: 'Other Attendees' },
    { id: 'general', name: 'General Contact' }
  ];
  
  const winnerTypeOptions = [
    { id: 'category_winner', name: 'Category Winner' },
    { id: 'accolade_winner', name: 'Accolade Winner' }
  ];
  
  const statusOptions = [
    { id: 'active', name: 'Active Only' },
    { id: 'inactive', name: 'Inactive Only' }
  ];

  // DOM Elements for Filters
  const filterContainer = document.getElementById('filterContainer') as HTMLElement;
  const filterDropdown = document.getElementById('filterDropdown') as HTMLElement;
  const filterDropdownTitle = document.getElementById('filterDropdownTitle') as HTMLElement;
  const filterDropdownContent = document.getElementById('filterDropdownContent') as HTMLElement;
  const activeFilterPills = document.getElementById('activeFilterPills') as HTMLElement;
  const clearAllFiltersBtn = document.getElementById('clearAllFiltersBtn') as HTMLButtonElement;
  const filterButtons = document.querySelectorAll('.filter-btn') as NodeListOf<HTMLButtonElement>;

  // --- Filter Management Functions ---

  function openFilterDropdown(filterType: string) {
    activeFilterDropdown = filterType;
    filterDropdown.classList.remove('hidden');
    
    // Update button states
    filterButtons.forEach(btn => {
      if (btn.dataset.filter === filterType) {
        btn.classList.add('border-blue-500', 'ring-1', 'ring-blue-500');
        btn.classList.remove('border-gray-300');
      } else {
        btn.classList.remove('border-blue-500', 'ring-1', 'ring-blue-500');
        btn.classList.add('border-gray-300');
      }
    });
    
    // Position dropdown relative to the clicked button
    const btn = document.querySelector(`[data-filter="${filterType}"]`) as HTMLElement;
    if (btn) {
      const rect = btn.getBoundingClientRect();
      const containerRect = filterContainer.getBoundingClientRect();
      filterDropdown.style.left = `${rect.left - containerRect.left}px`;
    }
    
    renderFilterDropdownContent(filterType);
  }
  
  function closeFilterDropdown() {
    activeFilterDropdown = null;
    filterDropdown.classList.add('hidden');
    filterButtons.forEach(btn => {
      btn.classList.remove('border-blue-500', 'ring-1', 'ring-blue-500');
      btn.classList.add('border-gray-300');
    });
  }

  function renderFilterDropdownContent(filterType: string) {
    let title = '';
    let options: { id: string; name: string }[] = [];
    
    switch (filterType) {
      case 'event':
        title = 'Filter by event';
        options = events.map(e => ({
          id: e.id,
          name: `${e.event_name} (${e.event_year})${e.is_active ? ' â˜…' : ''}`
        }));
        break;
      case 'type':
        title = 'Filter by type';
        options = typeFilterOptions;
        break;
      case 'winnerType':
        title = 'Filter by winner type';
        options = winnerTypeOptions;
        break;
      case 'status':
        title = 'Filter by status';
        options = statusOptions;
        break;
    }
    
    filterDropdownTitle.textContent = title;
    
    filterDropdownContent.innerHTML = options.map(opt => {
      const isIncluded = activeFilters.some(f => f.type === filterType && f.value === opt.id && f.mode === 'include');
      const isExcluded = activeFilters.some(f => f.type === filterType && f.value === opt.id && f.mode === 'exclude');
      
      return `
        <div class="flex items-center justify-between py-2 px-3 hover:bg-gray-50 rounded-lg group">
          <span class="text-sm text-gray-700 flex-1">${escapeHtml(opt.name)}</span>
          <div class="flex items-center gap-1">
            <button
              type="button"
              data-action="include"
              data-filter-type="${filterType}"
              data-value="${opt.id}"
              data-label="${escapeHtml(opt.name)}"
              class="w-7 h-7 flex items-center justify-center rounded-full text-xs font-bold transition-colors ${
                isIncluded 
                  ? 'bg-green-500 text-white' 
                  : 'bg-gray-100 text-gray-500 hover:bg-green-100 hover:text-green-600'
              }"
              title="Include"
            >+</button>
            ${filterType !== 'status' ? `
            <button
              type="button"
              data-action="exclude"
              data-filter-type="${filterType}"
              data-value="${opt.id}"
              data-label="${escapeHtml(opt.name)}"
              class="w-7 h-7 flex items-center justify-center rounded-full text-xs font-bold transition-colors ${
                isExcluded 
                  ? 'bg-red-500 text-white' 
                  : 'bg-gray-100 text-gray-500 hover:bg-red-100 hover:text-red-600'
              }"
              title="Exclude"
            >âˆ’</button>
            ` : ''}
          </div>
        </div>
      `;
    }).join('');
    
    // Add click handlers
    filterDropdownContent.querySelectorAll('button').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        const target = e.currentTarget as HTMLButtonElement;
        const action = target.dataset.action as 'include' | 'exclude';
        const type = target.dataset.filterType!;
        const value = target.dataset.value!;
        const label = target.dataset.label!;
        
        toggleFilter(type, value, label, action);
      });
    });
  }

  function toggleFilter(type: string, value: string, label: string, mode: 'include' | 'exclude') {
    if (type === 'status') {
      const existingStatus = activeFilters.find(f => f.type === 'status' && f.value === value);
      activeFilters = activeFilters.filter(f => f.type !== 'status'); // Clear all status
      
      if (!existingStatus) {
        activeFilters.push({ type, value, label, mode });
      }
    } 
    else {
      const existingIndex = activeFilters.findIndex(f => f.type === type && f.value === value);
      
      if (existingIndex >= 0) {
        const existing = activeFilters[existingIndex];
        if (existing.mode === mode) {
          activeFilters.splice(existingIndex, 1); // Toggle Off
        } else {
          activeFilters[existingIndex].mode = mode; // Switch Mode
        }
      } else {
        activeFilters.push({ type, value, label, mode });
      }
    }
    
    renderActiveFilterPills();
    renderFilterDropdownContent(type);
    loadContacts();
  }

