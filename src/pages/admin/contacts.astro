---
/**
 * Admin Contacts Management Page
 */
import AdminLayout from '../../components/admin/AdminLayout.astro';
import Modal from '../../components/admin/Modal.astro';

---

<AdminLayout title="Contacts" activePage="contacts">
  <div class="space-y-8">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Contacts</h1>
        <p class="mt-2 text-gray-600">Manage contacts for communications. Types are derived from associations.</p>
      </div>
      <button
        id="addContactBtn"
        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium"
      >
        + Add Contact
      </button>
    </div>

    <!-- Filter -->
    <div class="bg-white border border-gray-200 rounded-lg p-4">
      <div class="flex flex-wrap gap-4">
        <input
          type="text"
          id="searchInput"
          placeholder="Search contacts..."
          class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-hidden focus:ring-2 focus:ring-blue-500 min-w-64"
        />
        <select id="contactTypeFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-hidden focus:ring-2 focus:ring-blue-500">
          <option value="">All Types</option>
          <option value="judge">Judges</option>
          <option value="finalist">Finalists</option>
          <option value="sponsor">Sponsors</option>
          <option value="attendee">Attendees</option>
          <option value="general">General</option>
        </select>
        <select id="statusFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-hidden focus:ring-2 focus:ring-blue-500">
          <option value="">All Status</option>
          <option value="active">Active Only</option>
          <option value="inactive">Inactive Only</option>
        </select>
      </div>
    </div>

    <!-- Contacts List -->
    <div id="contactsList" class="space-y-4">
      <!-- Loading state -->
      <div class="text-center py-12">
        <p class="text-gray-500">Loading contacts...</p>
      </div>
    </div>

    <!-- Add/Edit Modal -->
    <Modal id="contactModal" title="Add Contact">
      <form id="contactModalForm" class="space-y-6 max-w-full">
        <input type="hidden" id="contactId" name="id" />

        <!-- Associations Section (types are derived from these) -->
        <div id="associationsSection" class="space-y-6">
          <h3 class="text-lg font-medium text-gray-900 border-b pb-2">Associations</h3>
          <p class="text-sm text-gray-500">Link this contact to finalists, judges, and/or sponsors. Contact types are derived from these associations.</p>
          
          <!-- Associated Finalists -->
          <div class="space-y-3">
            <label class="block text-sm font-medium text-gray-700">Finalists</label>
            <div id="finalistAssociationsList" class="space-y-2 max-h-32 overflow-y-auto">
              <!-- Will be populated with current associations -->
            </div>
            <div class="relative">
              <div class="searchable-dropdown relative" data-select-id="finalist_id">
                <button
                  type="button"
                  id="finalist_id_btn"
                  class="w-full px-2.5 py-2 border border-gray-300 rounded-lg bg-white text-left flex items-center justify-between focus:outline-hidden focus:ring-2 focus:ring-blue-500 text-sm"
                >
                  <span id="finalist_id_text" class="text-gray-400">+ Add finalist...</span>
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <input type="hidden" id="finalist_id" name="finalist_id" />
                <div id="finalist_id_dropdown" class="hidden absolute z-50 w-full mt-1 bg-white rounded-lg shadow-lg border border-gray-300 max-h-60 overflow-hidden">
                  <div class="px-2 py-1 border-b border-gray-200">
                    <input
                      type="text"
                      id="finalist_id_search"
                      placeholder="Search finalists..."
                      class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-hidden focus:ring-2 focus:ring-blue-500"
                    />
                  </div>
                  <div id="finalist_id_options" class="max-h-48 overflow-y-auto"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Associated Judges -->
          <div class="space-y-3">
            <label class="block text-sm font-medium text-gray-700">Judges</label>
            <div id="judgeAssociationsList" class="space-y-2 max-h-32 overflow-y-auto">
