                      <svg class="absolute right-8 top-1/2 -translate-y-1/2 h-full w-auto" viewBox="0 0 200 400" fill="none">
                        <!-- Plant stem and leaves -->
                        <path d="M100 50 Q95 100 100 150 Q105 200 100 250 Q95 300 100 350" stroke="black" stroke-width="8" fill="none"/>
                        <ellipse cx="75" cy="80" rx="35" ry="50" fill="black" transform="rotate(-30 75 80)"/>
                        <ellipse cx="125" cy="120" rx="35" ry="50" fill="black" transform="rotate(30 125 120)"/>
                        <ellipse cx="70" cy="160" rx="35" ry="50" fill="black" transform="rotate(-25 70 160)"/>
                        <ellipse cx="130" cy="200" rx="35" ry="50" fill="black" transform="rotate(25 130 200)"/>
                        <ellipse cx="75" cy="240" rx="35" ry="50" fill="black" transform="rotate(-30 75 240)"/>
                        <ellipse cx="125" cy="280" rx="35" ry="50" fill="black" transform="rotate(30 125 280)"/>
